@model WebApplication1.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movie"))
{
    @Html.ValidationSummary(true,"Please fix the errors")

    <div class="form-group">
        @Html.LabelFor(c => c.MovieName)
        @Html.TextBoxFor(c => c.MovieName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.MovieName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ReleaseDate)
        @Html.TextBoxFor(c => c.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ImdbRating)
        @Html.TextBoxFor(c => c.ImdbRating, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ImdbRating)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.GenreId)
        @Html.DropDownListFor(c => c.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select a Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Stock)
        @Html.TextBoxFor(c => c.Stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Stock)
    </div>
    @Html.HiddenFor(m => m.Id)

    @Html.AntiForgeryToken()
    <div>
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
    @section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
}